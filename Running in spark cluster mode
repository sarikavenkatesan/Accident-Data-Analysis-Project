// Command to run in spark cluster mode
spark-submit --master yarn --deploy-mode cluster --driver-memory 10G --num-executors 8 --executor-memory 10G --executor-cores 8 --conf spark.scheduler.mode=FAIR s3_read_s3_write_text.py default historical_spot_prices_source_text default historical_spot_prices_output_text

